{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "sites": [
      {
        "target": "production",
        "site": "city-bucket-list"
      },
      {
        "target": "staging",
        "site": "city-bucket-list-staging"
      },
      {
        "target": "development",
        "site": "city-bucket-list-dev"
      }
    ]
  }
}